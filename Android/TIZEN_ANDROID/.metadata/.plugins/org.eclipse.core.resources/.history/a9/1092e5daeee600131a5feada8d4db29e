<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samsung.android.example.helloaccessoryprovider"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <!-- 블루투스 권한 설정. 근데 와이파이 쓰는데 왜 설정한건지 모르겠음. -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- Samsung Accessory Protocol 사용을 위한 권한. -->
    <uses-permission android:name="com.samsung.accessory.permission.ACCESSORY_FRAMEWORK" />
    <!-- Wearable app을 위한 권한. 아마 위젯 사용하겠다는 권한인 것 같다. -->
    <uses-permission android:name="com.samsung.wmanager.APP" />
    <!-- HosstManager에서 notification 하기 위한 권한. -->
    <uses-permission android:name="com.samsung.wmanager.ENABLE_NOTIFICATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- SAAgent를 확장한 서비스 시작 위치 -->
        <service android:name="ac.seahorse.seahorsegear2.GearService" />

        <!-- 기본적으로 세팅해줘야 하는 리시버이다. -->
        <receiver android:name="com.samsung.android.sdk.accessory.ServiceConnectionIndicationBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.accessory.service.action.ACCESSORY_SERVICE_CONNECTION_IND" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.samsung.android.sdk.accessory.RegisterUponInstallReceiver" >
            <intent-filter>
                <action android:name="android.accessory.device.action.REGISTER_AFTER_INSTALL" />
            </intent-filter>
        </receiver>

        <!-- profile.xml 위치와 name을 적어준다. Tizen Wearable SDK에서 config.xml에 작성한 key=""를 name에 적어야 하는 것 같다. -->
        <meta-data
            android:name="AccessoryServicesLocation"
            android:value="/res/xml/accessoryservices.xml" />

        <activity
            android:name="ac.seahorse.seahorsegear2.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
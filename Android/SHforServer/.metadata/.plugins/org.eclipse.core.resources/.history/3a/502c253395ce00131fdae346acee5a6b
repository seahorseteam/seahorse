@SuppressLint("NewApi")
public class AddwordView extends CreateView {
	// 자동완성목록
	String[] wordList = { "account", "address", "apple", "applicant",
			"application", "apply", "appreciate", "appropriate", "assume",
			"attribute", "available" };
	SuperAwesomeCardFragment superAwesomeCardFragment;
	// 스피너
	Spinner spinner;
